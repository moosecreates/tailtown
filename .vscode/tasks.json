{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Services",
      "type": "shell",
      "command": "npm run dev:start",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Stop All Services",
      "type": "shell",
      "command": "npm run dev:stop",
      "problemMatcher": []
    },
    {
      "label": "Restart Services",
      "type": "shell",
      "command": "npm run dev:restart",
      "problemMatcher": []
    },
    {
      "label": "Run Quick Tests",
      "type": "shell",
      "command": "npm run test:quick",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run Tests (Watch Mode)",
      "type": "shell",
      "command": "npm run test:watch",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Database Backup",
      "type": "shell",
      "command": "npm run db:backup",
      "problemMatcher": []
    },
    {
      "label": "Check Environment",
      "type": "shell",
      "command": "npm run env:status && npm run dev:status",
      "problemMatcher": []
    },
    {
      "label": "Generate Component",
      "type": "shell",
      "command": "npm run util:component ${input:componentName}",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "componentName",
      "type": "promptString",
      "description": "Component name (e.g., MyComponent)"
    }
  ]
}
