{
  "info": {
    "name": "Tailtown Services API",
    "description": "API collection for testing the Tailtown Pet Resort Services endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Services",
      "description": "Endpoints related to service management",
      "item": [
        {
          "name": "Get All Services",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/services?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "isActive",
                  "value": "true",
                  "disabled": true
                },
                {
                  "key": "category",
                  "value": "BOARDING",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                }
              ]
            },
            "description": "Retrieves a list of all services with pagination and filtering options"
          },
          "response": []
        },
        {
          "name": "Get Service by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/services/{{serviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services", "{{serviceId}}"]
            },
            "description": "Retrieves a specific service by its ID"
          },
          "response": []
        },
        {
          "name": "Create Service",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/services",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium Boarding\",\n  \"description\": \"Luxury boarding experience for your pet\",\n  \"duration\": 1440,\n  \"price\": 65.00,\n  \"color\": \"#9C27B0\",\n  \"serviceCategory\": \"BOARDING\",\n  \"isActive\": true,\n  \"capacityLimit\": 15,\n  \"requiresStaff\": true,\n  \"notes\": \"Includes luxury bedding and extra playtime\",\n  \"availableAddOns\": [\n    {\n      \"name\": \"Extra Playtime\",\n      \"description\": \"Add an extra 30 minutes of dedicated playtime\",\n      \"price\": 15.00,\n      \"duration\": 30\n    },\n    {\n      \"name\": \"Grooming Add-on\",\n      \"description\": \"Basic grooming service\",\n      \"price\": 25.00,\n      \"duration\": 60\n    }\n  ]\n}"
            },
            "description": "Creates a new service with the provided data"
          },
          "response": []
        },
        {
          "name": "Update Service",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/services/{{serviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services", "{{serviceId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Elite Boarding\",\n  \"price\": 75.00,\n  \"availableAddOns\": [\n    {\n      \"name\": \"Extra Playtime\",\n      \"description\": \"Add an extra 30 minutes of dedicated playtime\",\n      \"price\": 20.00,\n      \"duration\": 30\n    },\n    {\n      \"name\": \"Webcam Access\",\n      \"description\": \"24/7 webcam access to view your pet\",\n      \"price\": 10.00,\n      \"duration\": 0\n    }\n  ]\n}"
            },
            "description": "Updates an existing service by its ID"
          },
          "response": []
        },
        {
          "name": "Deactivate Service",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{baseUrl}}/api/services/{{serviceId}}/deactivate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services", "{{serviceId}}", "deactivate"]
            },
            "description": "Deactivates a service (soft delete)"
          },
          "response": []
        },
        {
          "name": "Delete Service",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/services/{{serviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services", "{{serviceId}}"]
            },
            "description": "Permanently deletes a service if it has no active reservations"
          },
          "response": []
        },
        {
          "name": "Get Service Add-ons",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/services/{{serviceId}}/add-ons",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services", "{{serviceId}}", "add-ons"]
            },
            "description": "Retrieves all add-on services for a specific service"
          },
          "response": []
        },
        {
          "name": "Get Service Reservations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/services/{{serviceId}}/reservations?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "services", "{{serviceId}}", "reservations"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "CONFIRMED",
                  "disabled": true
                },
                {
                  "key": "startDate",
                  "value": "2025-04-01",
                  "disabled": true
                },
                {
                  "key": "endDate",
                  "value": "2025-04-30",
                  "disabled": true
                }
              ]
            },
            "description": "Retrieves all reservations for a specific service with filtering options"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3002",
      "type": "string"
    },
    {
      "key": "serviceId",
      "value": "",
      "type": "string"
    }
  ]
}
