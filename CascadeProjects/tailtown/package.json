{
  "name": "tailtown",
  "version": "0.1.0",
  "description": "Pet Resort Management System for Tailtown",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend",
    "shared/*"
  ],
  "scripts": {
    "start": "docker-compose up",
    "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "test": "lerna run test",
    "build": "lerna run build"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "lerna": "^6.6.2"
  }
}
