# Reservation Service - Production Environment
# Copy this file to .env.production and fill in your actual values

# Environment
NODE_ENV=production

# Database
DATABASE_URL="postgresql://username:password@your-db-host:5432/tailtown_reservation_production"

# Server Configuration
PORT=4003
HOST=0.0.0.0

# JWT Configuration (should match customer service)
JWT_SECRET="REPLACE_WITH_SAME_SECRET_AS_CUSTOMER_SERVICE"

# CORS Configuration
CORS_ORIGIN="https://yourdomain.com,https://admin.yourdomain.com"

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="/var/log/tailtown/reservation-service.log"

# Redis (optional)
REDIS_URL="redis://localhost:6379"

# Monitoring
SENTRY_DSN=""
