# PRODUCTION Environment Variables Template
# Copy this file to .env.production and fill with PRODUCTION values
# NEVER commit .env.production to git!

# Database Configuration - PRODUCTION
DATABASE_URL="postgresql://prod_user:STRONG_PASSWORD_HERE@prod-db-host:5432/customer?schema=public&sslmode=require"
DATABASE_SSL_ENABLED=true
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=10000

# Server Configuration - PRODUCTION
PORT=4004
NODE_ENV=production
HOST=0.0.0.0
TRUST_PROXY=true

# Security Configuration - PRODUCTION
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_STRING_32_CHARS_MIN
JWT_EXPIRES_IN=2h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
PASSWORD_SALT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_STRING_32_CHARS_MIN
ENABLE_2FA=true

# Super Admin API Key - PRODUCTION
# Generate: openssl rand -base64 48
SUPER_ADMIN_API_KEY=CHANGE_THIS_TO_STRONG_RANDOM_API_KEY

# Service-to-Service API Key
SERVICE_API_KEY=CHANGE_THIS_TO_STRONG_RANDOM_API_KEY

# File Upload Configuration - PRODUCTION
UPLOAD_DIR=/var/app/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
SCAN_UPLOADS_FOR_MALWARE=true

# API Configuration - PRODUCTION
API_PREFIX=/api
API_VERSION=v1
ENABLE_API_DOCS=false # Disable in production

# CORS Configuration - PRODUCTION
# Set to your actual domain(s)
ALLOWED_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH
ALLOWED_HEADERS=Content-Type,Authorization
ALLOW_CREDENTIALS=true

# Rate Limiting - PRODUCTION
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_TRUSTED=false

# Logging Configuration - PRODUCTION
LOG_LEVEL=warn # Only log warnings and errors
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/tailtown/app.log

# Monitoring - PRODUCTION
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Cache Configuration - PRODUCTION
REDIS_URL=redis://prod-redis-host:6379
REDIS_PASSWORD=STRONG_REDIS_PASSWORD
CACHE_TTL=3600

# Email Configuration - PRODUCTION
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your Business Name

# SMS Configuration - PRODUCTION
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# Business Information
BUSINESS_NAME=Your Business Name
BUSINESS_PHONE=+1234567890
BUSINESS_WEBSITE=https://yourdomain.com

# Backup Configuration - PRODUCTION
BACKUP_ENABLED=true
BACKUP_CRON="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem
