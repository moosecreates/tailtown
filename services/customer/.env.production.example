# Customer Service - Production Environment
# Copy this file to .env.production and fill in your actual values

# Environment
NODE_ENV=production

# Database
DATABASE_URL="postgresql://username:password@your-db-host:5432/tailtown_customer_production"

# Server Configuration
PORT=4004
HOST=0.0.0.0

# JWT Configuration
# CRITICAL: Generate new secrets! Use: openssl rand -base64 32
JWT_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS_MIN"
JWT_EXPIRES_IN="8h"
JWT_REFRESH_SECRET="REPLACE_WITH_DIFFERENT_SECURE_RANDOM_STRING"
JWT_REFRESH_EXPIRES_IN="7d"

# Super Admin JWT (separate authentication)
SUPER_ADMIN_JWT_SECRET="REPLACE_WITH_ANOTHER_SECURE_RANDOM_STRING"
SUPER_ADMIN_JWT_EXPIRES_IN="8h"
SUPER_ADMIN_REFRESH_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="https://yourdomain.com,https://admin.yourdomain.com"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="/var/www/tailtown/uploads"

# Logging
LOG_LEVEL="info"
LOG_FILE="/var/log/tailtown/customer-service.log"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
FROM_EMAIL="noreply@yourdomain.com"

# Session
SESSION_SECRET="REPLACE_WITH_SECURE_SESSION_SECRET"

# Redis (optional)
REDIS_URL="redis://localhost:6379"

# Monitoring
SENTRY_DSN=""
