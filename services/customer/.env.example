# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5433/customer?schema=public"
DATABASE_SSL_ENABLED=false # Set to true in production
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT=10000

# Server Configuration
PORT=4004
NODE_ENV=development # development, test, production
HOST=localhost
TRUST_PROXY=false # Set to true if behind reverse proxy

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
PASSWORD_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
ENABLE_2FA=false # Enable two-factor authentication

# Super Admin API Key (for admin portal access)
SUPER_ADMIN_API_KEY=your_super_admin_api_key_here_change_in_production

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
SCAN_UPLOADS_FOR_MALWARE=true

# API Configuration
API_PREFIX=/api
API_VERSION=v1
ENABLE_API_DOCS=true # Enable Swagger/OpenAPI documentation

# CORS Configuration
# PRODUCTION: Set to your actual domain(s), comma-separated
# Example: ALLOWED_ORIGINS=https://app.tailtown.com,https://admin.tailtown.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH
ALLOWED_HEADERS=Content-Type,Authorization
ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_TRUSTED=true

# Logging Configuration
LOG_LEVEL=info # debug, info, warn, error
LOG_FORMAT=json # json, text
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# Monitoring & Error Tracking
ENABLE_METRICS=false # Enable Prometheus metrics
METRICS_PORT=9090

# Sentry Error Tracking (https://sentry.io) - IMPLEMENTED Nov 7, 2025
# Infrastructure ready, configure DSN for production error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENABLED=true # Set to false to disable in development
SENTRY_RELEASE=customer-service@1.0.0 # Version for release tracking
SENTRY_ENVIRONMENT=development # development, staging, production
SENTRY_SAMPLE_RATE=1.0 # 100% error sampling
SENTRY_TRACES_SAMPLE_RATE=0.1 # 10% performance sampling

# Cache Configuration (Redis) - IMPLEMENTED Nov 7, 2025
# 10-50x performance improvement for frequently accessed data
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true # Set to false to disable caching
REDIS_DEFAULT_TTL=300 # Default cache TTL in seconds (5 minutes)
REDIS_MAX_RETRIES=3 # Connection retry attempts
REDIS_RETRY_DELAY=1000 # Delay between retries (ms)
CACHE_TTL=3600 # Legacy - Time in seconds

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@tailtown.com
SENDGRID_FROM_NAME=Tailtown Pet Resort

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Business Information (for SMS/Email)
BUSINESS_NAME=Tailtown Pet Resort
BUSINESS_PHONE=+1234567890

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_CRON="0 0 * * *" # Daily at midnight
BACKUP_RETENTION_DAYS=30
