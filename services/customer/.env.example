# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5433/customer?schema=public"
DATABASE_SSL_ENABLED=false # Set to true in production
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT=10000

# Server Configuration
PORT=4004
NODE_ENV=development # development, test, production
HOST=localhost
TRUST_PROXY=false # Set to true if behind reverse proxy

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
PASSWORD_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
ENABLE_2FA=false # Enable two-factor authentication

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
SCAN_UPLOADS_FOR_MALWARE=true

# API Configuration
API_PREFIX=/api
API_VERSION=v1
ENABLE_API_DOCS=true # Enable Swagger/OpenAPI documentation

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH
ALLOWED_HEADERS=Content-Type,Authorization
ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_TRUSTED=true

# Logging Configuration
LOG_LEVEL=info # debug, info, warn, error
LOG_FORMAT=json # json, text
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# Monitoring
ENABLE_METRICS=false # Enable Prometheus metrics
METRICS_PORT=9090

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # Time in seconds

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@tailtown.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_CRON="0 0 * * *" # Daily at midnight
BACKUP_RETENTION_DAYS=30
