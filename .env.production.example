# Tailtown Production Environment Configuration
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to git!

# Environment
NODE_ENV=production

# Database Configuration
# Replace with your production PostgreSQL connection string
DATABASE_URL="postgresql://username:password@your-db-host:5432/tailtown_production"

# Security - JWT Secrets
# CRITICAL: Generate new secrets for production!
# Use: openssl rand -base64 32
JWT_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING_32_CHARS_MIN"
JWT_REFRESH_SECRET="REPLACE_WITH_DIFFERENT_SECURE_RANDOM_STRING"

# Super Admin JWT (separate from regular auth)
SUPER_ADMIN_JWT_SECRET="REPLACE_WITH_ANOTHER_SECURE_RANDOM_STRING"

# API Configuration
PORT=4004
RESERVATION_SERVICE_PORT=4003
PAYMENT_SERVICE_PORT=4005

# Frontend URL (for CORS)
FRONTEND_URL="https://yourdomain.com"
ADMIN_PORTAL_URL="https://admin.yourdomain.com"

# CORS Configuration
# Replace with your actual domain(s)
ALLOWED_ORIGINS="https://yourdomain.com,https://admin.yourdomain.com"

# Session Configuration
SESSION_SECRET="REPLACE_WITH_SECURE_SESSION_SECRET"
SESSION_MAX_AGE=86400000

# Email Configuration (if using email features)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
FROM_EMAIL="noreply@yourdomain.com"

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR="/var/www/tailtown/uploads"

# Logging
LOG_LEVEL="info"
LOG_FILE="/var/log/tailtown/app.log"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (optional, for session storage)
REDIS_URL="redis://localhost:6379"

# Monitoring (optional)
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
