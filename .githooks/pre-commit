#!/bin/bash

# Pre-commit hook: Automated checks before committing

PROJECT_ROOT="$(git rev-parse --show-toplevel)"
SKIP_TESTS="${SKIP_TESTS:-false}"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

echo -e "${CYAN}üîç Running pre-commit checks...${NC}"
echo ""

# 1. Check for zombie processes
echo "Checking for zombie processes..."
zombie_count=$(ps aux | grep -E "(ts-node-dev|react-scripts)" | grep -v grep | wc -l | tr -d ' ')

if [ "$zombie_count" -gt 5 ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Found $zombie_count zombie processes - cleaning up...${NC}"
    
    pkill -9 -f "ts-node-dev" 2>/dev/null || true
    pkill -9 -f "react-scripts" 2>/dev/null || true
    
    sleep 2
    
    new_count=$(ps aux | grep -E "(ts-node-dev|react-scripts)" | grep -v grep | wc -l | tr -d ' ')
    echo -e "${GREEN}‚úÖ Cleanup complete. Remaining: $new_count${NC}"
fi

# 2. Check for console.log in staged files (excluding infrastructure files)
echo ""
echo "Checking for console.log statements..."
STAGED_FILES=$(git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | grep -v -E '(utils/redis\.ts|utils/sentry\.ts|utils/logger\.ts|__tests__|\.test\.|\.spec\.)' || true)
if [ -n "$STAGED_FILES" ]; then
    if echo "$STAGED_FILES" | xargs grep -n "console\.log" 2>/dev/null; then
        echo -e "${YELLOW}‚ö†Ô∏è  Warning: console.log statements found in staged files${NC}"
        echo "   Consider removing them or using proper logging"
        echo "   (Infrastructure files like redis.ts, sentry.ts are excluded)"
        echo ""
    fi
fi

# 3. Check for debugger statements (excluding tests and infrastructure)
echo "Checking for debugger statements..."
STAGED_FILES=$(git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | grep -v -E '(hooks/pre-commit|__tests__|\.test\.|\.spec\.)' || true)
if [ -n "$STAGED_FILES" ]; then
    if echo "$STAGED_FILES" | xargs grep -n "debugger" 2>/dev/null; then
        echo -e "${RED}‚úó Error: debugger statements found${NC}"
        echo "   Please remove debugger statements before committing"
        exit 1
    fi
fi

# 4. Run quick tests on changed files (optional, can be skipped)
if [ "$SKIP_TESTS" = "false" ]; then
    echo ""
    echo "Running quick tests on changed files..."
    
    # Check if there are TypeScript/JavaScript changes
    if git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' > /dev/null; then
        cd "$PROJECT_ROOT"
        
        # Run quick tests (with timeout)
        timeout 30s npm run test:changed 2>&1 | tail -20 || {
            echo -e "${YELLOW}‚ö†Ô∏è  Tests took too long or failed${NC}"
            echo "   To skip tests, use: SKIP_TESTS=true git commit"
            echo ""
            read -p "Continue anyway? (y/N): " -n 1 -r
            echo
            if [[ ! $REPLY =~ ^[Yy]$ ]]; then
                exit 1
            fi
        }
    fi
fi

echo ""
echo -e "${GREEN}‚úÖ Pre-commit checks passed${NC}"
echo ""
echo "üí° Tip: To skip tests, use: SKIP_TESTS=true git commit"
echo ""

exit 0
