{
  "name": "tailtown",
  "version": "0.1.0",
  "description": "Pet Resort Management System for Tailtown",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend",
    "shared/*"
  ],
  "scripts": {
    "start": "docker-compose up",
    "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "test": "lerna run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "test:perf": "./performance/run-all-tests.sh",
    "test:perf:load": "k6 run performance/reservation-load-test.js",
    "test:perf:concurrent": "k6 run performance/concurrent-booking-test.js",
    "test:perf:db": "k6 run performance/database-query-test.js",
    "coverage": "./scripts/generate-coverage-report.sh",
    "coverage:badge": "node scripts/coverage-badge.js",
    "coverage:open": "open frontend/coverage/lcov-report/index.html && open services/reservation-service/coverage/lcov-report/index.html",
    "build": "lerna run build"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "chromedriver": "^139.0.0",
    "lerna": "^6.6.2",
    "puppeteer": "^24.16.0",
    "selenium-webdriver": "^4.34.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@mui/system": "^5.14.20",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
