{
  "name": "tailtown",
  "version": "0.1.0",
  "description": "Pet Resort Management System for Tailtown",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend",
    "shared/*"
  ],
  "scripts": {
    "start": "docker-compose up",
    "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "start:services": "./scripts/start-services.sh",
    "start:services:full": "./scripts/start-services.sh --with-payment",
    "stop:services": "./scripts/stop-services.sh",
    "health:check": "node scripts/health-check.js",
    "health:watch": "watch -n 10 'node scripts/health-check.js'",
    "dev:start": "./scripts/dev-workflow.sh start",
    "dev:stop": "./scripts/dev-workflow.sh stop",
    "dev:restart": "./scripts/dev-workflow.sh restart",
    "dev:status": "./scripts/dev-workflow.sh status",
    "dev:check": "./scripts/dev-workflow.sh check",
    "dev:cleanup": "./scripts/dev-workflow.sh cleanup",
    "dev:logs": "./scripts/dev-workflow.sh logs",
    "env:dev": "./scripts/env-manager.sh dev",
    "env:prod": "./scripts/env-manager.sh prod",
    "env:status": "./scripts/env-manager.sh status",
    "env:backups": "./scripts/env-manager.sh backups",
    "daemon:start": "./scripts/auto-cleanup-daemon.sh start",
    "daemon:stop": "./scripts/auto-cleanup-daemon.sh stop",
    "daemon:restart": "./scripts/auto-cleanup-daemon.sh restart",
    "daemon:status": "./scripts/auto-cleanup-daemon.sh status",
    "setup:automation": "./scripts/install-launchd.sh",
    "setup:git-hooks": "./scripts/setup-git-hooks.sh",
    "setup:shell": "./scripts/setup-shell-integration.sh",
    "backup:now": "./scripts/backup-now.sh",
    "backup:list": "ls -lh backups/",
    "test": "lerna run test",
    "test:integration": "jest tests/integration --detectOpenHandles",
    "test:unit": "jest tests/unit --detectOpenHandles",
    "test:services": "jest tests/integration/service-health.test.js --detectOpenHandles",
    "test:mcp": "jest tests/unit/mcp-server.test.js --detectOpenHandles",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "test:perf": "./performance/run-all-tests.sh",
    "test:perf:load": "k6 run performance/reservation-load-test.js",
    "test:perf:concurrent": "k6 run performance/concurrent-booking-test.js",
    "test:perf:db": "k6 run performance/database-query-test.js",
    "coverage": "./scripts/generate-coverage-report.sh",
    "coverage:badge": "node scripts/coverage-badge.js",
    "coverage:open": "open frontend/coverage/lcov-report/index.html && open services/reservation-service/coverage/lcov-report/index.html",
    "build": "lerna run build",
    "import:staff": "node scripts/import-staff-data.js",
    "import:staff:gingr": "node scripts/import-staff-data.js gingr",
    "import:staff:csv": "node scripts/import-staff-data.js csv",
    "import:staff:json": "node scripts/import-staff-data.js json",
    "hash:password": "node scripts/import-staff-data.js hash-password"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "chromedriver": "^139.0.0",
    "lerna": "^6.6.2",
    "puppeteer": "^24.16.0",
    "selenium-webdriver": "^4.34.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@mui/system": "^5.14.20",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "bcrypt": "^6.0.0",
    "csv-parse": "^6.1.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
